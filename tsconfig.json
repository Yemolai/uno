{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "target": "ES2016",
        "sourceMap": true,
        "lib": ["ES2016", "ES2017", "ES2018", "ES2019"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}